@model List<Blog.ViewModels.Users_in_Role_ViewModel>

@{
    /**/

    ViewBag.Title = "ListUsers";
    Layout = "~/Views/Shared/_SecondLayout.cshtml";
}

<h2>ListUsers</h2>


<div class="row">

    <table class="table table-bordered table-hover table-sm">
        <thead class="thead-light">
            <tr>
                <th style="width: 40%">Email</th>
                <th style="width: 35%">Current Role(s)</th>
                <th style="width: 25%">Add Roles</th>
            </tr>

        </thead>

        @*@foreach (var user in Model)*@
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr id=@Model[i].UserId>
                <td>@Model[i].Email</td>
                <td></td>
                <td>
                    <div class="form-inline">
                        @Html.DropDownListFor(m => Model[i].SelectedRoleId, Model[i].UserRoles, "Select A Role",
                             new { @class = "form-control dropdown mx-2" })
                        <button type="button" onclick="return assignUserRole('@Model[i].UserId')" class="btn-sm btn-success roleButton" data-id=@Model[i].UserId>Add</button>                        
                    </div>
                </td>
            </tr>
        }
    </table>
</div>


